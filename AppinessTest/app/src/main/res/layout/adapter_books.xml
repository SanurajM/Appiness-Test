<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="@dimen/margin_horizontal">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TitleText"
            android:layout_width="0dp"
            android:text="sdasdasdasd"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvByTitle"
            style="@style/TitleSubItalicText"
            android:layout_marginTop="8dp"
            android:text="@string/by"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/tvBy"
            style="@style/TitleSubItalicText"
            android:layout_width="0dp"
            android:text="sdfsdfsdfsdfsdf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvByTitle"
            app:layout_constraintTop_toTopOf="@+id/tvByTitle" />

        <TextView
            android:id="@+id/tvNumBackersTitle"
            style="@style/TitleSubText"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            android:text="@string/number_of_backers"
            android:gravity="end"
            app:layout_constraintEnd_toStartOf="@+id/tvNumBackers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBy" />

        <TextView
            android:id="@+id/tvNumBackers"
            style="@style/TitleSubText"
            android:layout_width="wrap_content"
            android:text="sadasdasd"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvNumBackersTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>